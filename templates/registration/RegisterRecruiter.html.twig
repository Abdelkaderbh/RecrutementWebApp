{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('/assets/css/registerStyle.css') }}">
{% endblock %}

{% block body %}





    <div class="container register shadow">
        <div class="row">
            <div class="col-md-3 register-left">
                <img src="https://image.ibb.co/n7oTvU/logo_white.png" alt=""/>
                <h3> Already have an account ? </h3>

                <a href="{{ path('app_login') }}"><input type="submit" name="" value="Login"/></a><br/>
            </div>
            <div class="col-md-9 register-right">
                <ul class="nav nav-tabs nav-justified" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link " id="home-tab" data-toggle="tab" href="{{ path('app_registration_candidat') }}" role="tab" aria-controls="home" aria-selected="true">Employee</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active w-100" id="profile-tab" data-toggle="tab" href="{{ path('app_registration_recruiter') }}" role="tab" aria-controls="profile" aria-selected="false">Hirer</a>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <h3 class="register-heading">Apply as a Recuiter</h3>
                        <div class="row register-form">
                            <div class="col-md-6">
                                {{ form_errors(recForm) }}
                                {{ form_start(recForm) }}

                                <div class="form-group">
                                    {{ form_row(recForm.first_name) }}

                                </div>
                                <div class="form-group">
                                    {{ form_row(recForm.last_name) }}

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_row(recForm.email) }}



                                </div>
                                <div class="form-group">
                                    {{ form_row(recForm.plainPassword, {
                                        label: 'Password'
                                    }) }}

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_row(recForm.Company_Name) }}

                                </div>
                            </div>
                            <div class="row-md-1 ">

                                <input type="submit" class="btnRegisterRec"  value="Register"/>
                            </div>
                        </div>
                        {{ form_end(recForm) }}
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}