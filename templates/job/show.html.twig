{% extends 'base.html.twig' %}

{% block title %}Job{% endblock %}

{% block body %}
<div class="container-xxl py-5 bg-dark page-header mb-5">
    <div class="container my-5 pt-5 pb-4">
        <h1 class="display-3 text-white mb-3 animated slideInDown">{{ job.Title }} Detail </h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb text-uppercase">
                <li class="breadcrumb-item"><a href="{{ path ('app_home_page') }}">Home</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_job_index') }}">Job Offers</a></li>
                <li class="breadcrumb-item text-white active" aria-current="page">{{ job.Title }}</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Header End -->
<!-- Job Detail Start -->
<div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container">
        <div class="row gy-5 gx-4">
            <div class="col-lg-8">
                <div class="d-flex align-items-center mb-5">
                    <img class="flex-shrink-0 img-fluid border rounded" src="/assets/img/com-logo-2.jpg" alt="" style="width: 80px; height: 80px;">
                    <div class="text-start ps-4">
                        <h3 class="mb-3">{{ job.Title }}</h3>
                        <span class="text-truncate me-3"><i class="fa fa-map-marker-alt text-primary me-2"></i> <b> Location </b>  {{ job.Location }}</span>
                        <span class="text-truncate me-3"><i class="far fa-clock text-primary me-2"></i> <b> Type : </b> {{ job.TimeType }}</span>
                        <span class="text-truncate me-3"><i class="far fa-file-alt text-primary me-2"></i> <b> Contract Type :</b> {{ job.ContractType }}</span>
                        <span class="text-truncate me-0"><i class="far fa-money-bill-alt text-primary me-2"></i><b> Salary : </b>{{ job.SalaryProp }}</span>
                    </div>
                </div>

                <div class="mb-5">
                    <h4 class="mb-3">Job description</h4>
                    <p>{{ job.Description }}</p>
                    <h4 class="mb-3">Responsibility</h4>
                    <p>{{ job.Mission }}</p>
                    <h4 class="mb-3">Required Skills </h4>
                    <p>{{ job.ReqSkills }}</p>




                </div>

            </div>
            </div>
        </div>
</div>
        <!-- Job Detail End -->
    <div class="d-flex mb-3">
        {% if app.user %}
            <a class="btn btn-outline-primary btn-lg" href="{{ path('apply_to_job', { 'id': job.id }) }}">Apply Now</a>
        {% else  %}
            <a class="btn btn-primary btn-lg" href="{{ path('app_login') }}">Connect to aplly </a>
        {% endif %}
    </div>
{% endblock %}
