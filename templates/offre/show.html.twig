{% extends 'base.html.twig' %}

{% block title %}Offre{% endblock %}

{% block body %}
    <h1>Offre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ offre.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ offre.Title }}</td>
            </tr>
            <tr>
                <th>Limit_Date</th>
                <td>{{ offre.LimitDate ? offre.LimitDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Req_Skills</th>
                <td>{{ offre.ReqSkills ? offre.ReqSkills|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Mission</th>
                <td>{{ offre.Mission }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ offre.Description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_offre_index') }}">back to list</a>

    <a href="{{ path('app_offre_edit', {'id': offre.id}) }}">edit</a>

    {{ include('offre/_delete_form.html.twig') }}
{% endblock %}
