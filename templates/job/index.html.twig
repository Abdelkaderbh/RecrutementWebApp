{% extends 'base.html.twig' %}

{% block title %}Job index{% endblock %}

{% block body %}


            <!-- Jobs Start -->
            <div class="container-xxl py-5">
                <div class="container">
                    <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Job Offers</h1>
                    <div class="tab-class text-center wow fadeInUp" data-wow-delay="0.3s">

                        <div class="tab-content">
                            <div id="tab-1" class="tab-pane fade show p-0 active">
                                {% for job in jobs %}
                                     <div class="job-item p-4 mb-4">

                                    <div class="row g-4">
                                        <div class="col-sm-12 col-md-8 d-flex align-items-center">
                                            <img class="flex-shrink-0 img-fluid border rounded" src="/assets/img/com-logo-1.jpg" alt="" style="width: 80px; height: 80px;">

                                            <div class="text-start ps-4">
                                                <h5 class="mb-3"> <a href="{{ path('app_job_show', { 'id': job.id }) }}" > {{ job.Title }} </a> </h5>
                                                <span class="text-truncate me-3">  <i class="fa fa-map-marked-alt text-primary me-2"></i> <b> Location : </b> {{ job.Location }}</span>
                                                <span class="text-truncate me-3"> <i class="far fa-calendar-alt text-primary me-2"></i> <b> Limit Date : </b> {{ job.LimitDate ? job.LimitDate|date('Y-m-d') : '' }}</span>
                                                <span class="text-truncate me-0"><i class="far fa-money-bill-alt text-primary me-2"></i>  <b> Salary :  </b> {{ job.SalaryProp }}</span>
                                            </div>
                                        </div>
                                        <div class="col-sm-12 col-md-4 d-flex flex-column align-items-start align-items-md-end justify-content-center">
                                            <div class="d-flex mb-3">
                                                <a class="btn btn-light btn-square me-3" href=""><i class="far fa-heart text-primary"></i></a>
                                                <div class="d-flex mb-3">
                                                    {% if app.user %}
                                                        <a class="btn btn-primary" href="{{ path('apply_to_job', { 'id': job.id }) }}">Apply Now</a>
                                                    {% else  %}
                                                        <a class="btn btn-primary" href="{{ path('app_login') }}">Connect to aplly </a>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            {% else %}
                                <tr>
                                    <td colspan="9">no Jobs found</td>
                                </tr>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            <!-- Jobs End -->


{% endblock %}
