<!DOCTYPE html>
<html lang="en">

{% include '/home_recruteur/head.html.twig' %}

<body id="page-top">

<!-- Page Wrapper -->
<div id="wrapper">

    <!-- Sidebar -->
    {% include '/home_recruteur/sidebar.html.twig' %}
    <!-- End of Sidebar -->


    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">


            <!-- Topbar -->
            {% include '/home_recruteur/topBar.html.twig' %}
            <!-- End of Topbar -->


            <!-- Begin Page Content -->
            <div class="container-fluid">




                <!-- DataTales Example -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Jobs List</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Limit Date</th>
{#                                    <th>Type</th>#}
                                    <th>Mission</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                                </thead>

                                <tbody>
                                {% for offre in offers %}
                                <tr>
                                    <td>{{ offre.Title }}</td>
                                    <td>{{ offre.LimitDate ? offre.LimitDate|date('Y-m-d') : '' }}</td>
{#                                    <td>{{ offre.discriminatorValue }}</td>#}
                                    <td>{{ offre.mission }}</td>
                                    <td><a href="{{ path('app_job_edit',{'id':offre.id}) }}"> <button class="btn"> <i class="fa fa-edit" style="color: lightblue;"></i>  </button> </a> </td>

                                    <td> <form method="post" action="{{ path('app_offre_delete', {'id': offre.id}) }}" onsubmit="return confirm('Are you sure you want to delete this offre?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ offre.id) }}">
                                           <button class="btn"> <i class="fa fa-trash" style="color: lightcoral;"> </i> </button>
                                        </form> </td>
                                </tr>
                                </tbody>
                                {% else %}
                                    <tr>
                                        <td colspan="9">no Jobs found</td>
                                    </tr>
                                {% endfor %}
                            </table>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->


    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
{% include '/home_recruteur/logoutModal.html.twig' %}

<!-- Bootstrap core JavaScript-->
<script src="/assets/vendor/jquery/jquery.min.js"></script>
<script src="/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

<!-- Core plugin JavaScript-->
<script src="/assets/vendor/jquery-easing/jquery.easing.min.js"></script>

<!-- Custom scripts for all pages-->
<script src="/assets/js/sb-admin-2.min.js"></script>

<!-- Page level plugins -->
<script src="/assets/vendor/datatables/jquery.dataTables.min.js"></script>
<script src="/assets/vendor/datatables/dataTables.bootstrap4.min.js"></script>

<!-- Page level custom scripts -->
<script src="/assets/js/demo/datatables-demo.js"></script>

</body>

</html>