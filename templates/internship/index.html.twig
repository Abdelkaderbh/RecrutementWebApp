{% extends 'base.html.twig' %}

{% block title %}Intership Offers{% endblock %}

{% block body %}


    <!-- Jobs Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Internship Offers</h1>
            <div class="tab-class text-center wow fadeInUp" data-wow-delay="0.3s">

                <div class="tab-content">
                    <div id="tab-1" class="tab-pane fade show p-0 active">
                        {% for internhip in internships %}
                        <div class="job-item p-4 mb-4">

                            <div class="row g-4">
                                <div class="col-sm-12 col-md-8 d-flex align-items-center">
                                    <img class="flex-shrink-0 img-fluid border rounded" src="/assets/img/com-logo-1.jpg" alt="" style="width: 80px; height: 80px;">

                                    <div class="text-start ps-4">
                                        <h5 class="mb-3"> <a href="{{ path('app_intern_ship_show', { 'id': internhip.id }) }}" > {{ internhip.Title }} </a> </h5>
                                        <span class="text-truncate me-3"><i class="fa fa-money-bill text-primary me-2"> Payed : </i>{{ internhip.payed }}</span>
                                        <span class="text-truncate me-3"><i class="far fa-calendar-alt text-primary me-2"> Limit Date : </i>{{ internhip.LimitDate ? internhip.LimitDate|date('Y-m-d') : '' }}</span>
                                        <span class="text-truncate me-3"><i class="fa fa-calendar-alt text-primary me-2"> Start Date : </i>{{ internhip.startDate ? internhip.startDate|date('Y-m-d') : ''}}</span>
                                    </div>



                                </div>
                                <div class="col-sm-12 col-md-4 d-flex flex-column align-items-start align-items-md-end justify-content-center">
                                    <div class="d-flex mb-3">
                                        <a class="btn btn-light btn-square me-3" href=""><i class="far fa-heart text-primary"></i></a>
                                        <a class="btn btn-primary" href="{{ path('apply_to_job', { 'id': internhip.id }) }}">Apply Now</a>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    {% else %}
                        <tr>
                            <td colspan="9">no Jobs found</td>
                        </tr>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    <!-- Jobs End -->


{% endblock %}
