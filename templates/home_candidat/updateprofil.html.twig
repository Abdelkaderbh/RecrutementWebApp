{% extends 'base.html.twig' %}

{% block title %}Profil!{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('/assets/css/profil.css') }}">
{% endblock %}
{% block body %}

<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" width="150px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg"><span class="font-weight-bold">{{app.user.getFirstName()}} {{app.user.getLastName()}}</span><span class="text-black-50">{{app.user.getEmail()}}</span><span> </span></div>
        </div>
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Profile Settings</h4>
                </div>
                {{ form_errors( form) }}
                {{ form_start( form) }}


                <div class="row mt-2">
                    <div class="col-md-6">{{ form_row( form.first_name) }}</div>
                    <div class="col-md-6">{{ form_row( form.last_name) }}</div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12">{{ form_row( form.Phone_Number) }}</div>
                    <div class="col-md-12">{{ form_row( form.email) }}</div>
                    <div class="col-md-12">{{ form_row( form.birth_date) }}</div>
                    <div class="col-md-12">{{ form_row( form.adress) }}</div>
                    </div>

                <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="button">Save Profile</button></div>

            </div>
        </div>
        <div class="col-md-4">
            <div class="p-3 py-5">
                <div class="col-md-12">{{ form_row( form.skills) }}</div> <br>
                <div class="col-md-12">{{ form_row( form.cv) }}</div>
            </div>
        </div>
        {{ form_end( form) }}
    </div>
</div>
</div>
</div>
{% endblock %}